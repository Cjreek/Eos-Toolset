                                    <wpftk:IntegerUpDown Grid.Row="2" Grid.Column="1" Value="{Binding SettingsCopy.Classes.ExportOffset}" TextAlignment="Left"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox DockPanel.Dock="Top" Header="Domains">
