                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="2DA Offset" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,5,0"/>
                                    <wpftk:IntegerUpDown Grid.Row="2" Grid.Column="1" Value="{Binding SettingsCopy.Classes.ExportOffset}" TextAlignment="Left"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox DockPanel.Dock="Top" Header="Diseases">
