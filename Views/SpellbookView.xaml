            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <TabControl TabStripPlacement="Left" BorderThickness="1,0,0,0" SelectedIndex="{Binding SelectedTabIndex}">
        <TabItem Header="Info" Width="100" Height="30">
            <Grid Margin="10" IsEnabled="{Binding Data.IsReadonly, Converter={StaticResource inverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Spellbook" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="22" Margin="0,0,0,10" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Name" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Data.Name}" IsEnabled="{Binding Data.Overrides, Converter={StaticResource isNullConverter}}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Hint" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Data.Hint}"/>
            </Grid>
        </TabItem>
        <TabItem Header="Level 0" Width="100" Height="30">
            <Grid Margin="10" IsEnabled="{Binding Data.IsReadonly, Converter={StaticResource inverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Level 0 Spells" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="22" Margin="0,0,0,10" FontWeight="Bold"/>

                <uc:ResetIsEnabled Grid.Row="1">
                    <ListView ItemsSource="{Binding Data.Level0}" IsTabStop="{Binding Data.IsReadonly}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Spell" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <uc:SpellComboBox SelectedValue="{Binding Path=Spell}" IsNullable="False" Margin="-5,-1,-5,-3"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="" Width="25">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <uc:DeleteButton Command="{Binding ElementName=page, Path=DataContext.DeleteSpellCommand}" CommandParameter="{Binding}" Margin="-4,-10,-6,-11"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </uc:ResetIsEnabled>
            
                <Button Grid.Row="2" Grid.Column="1" Content="Add Spell" Width="150" Margin="2,5,0,0" HorizontalAlignment="Left" Command="{Binding AddSpellCommand}" CommandParameter="{StaticResource level0}"/>
            </Grid>
