<UserControl x:Class="Eos.Usercontrols.SpellComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eos.Usercontrols"
             xmlns:ext="clr-namespace:Eos.Extensions"
             xmlns:nwn="clr-namespace:Eos.Nwn"
             mc:Ignorable="d" 
             x:Name="ucSpellComboBox"
             d:DesignHeight="22" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\ConverterResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="cbSpells" Grid.Column="0" Click="btSearch_Click" HorizontalContentAlignment="Stretch" MinHeight="22">
            <Button.Content>
                <StackPanel Orientation="Horizontal" Margin="3,0,0,0">
                    <Image Grid.Column="0" Width="16" Height="16" Source="{Binding ElementName=ucSpellComboBox, Path=SelectedValue.Icon, Converter={StaticResource resRefConverter}, ConverterParameter={x:Static nwn:NWNResourceType.TGA}}" Margin="0,0,3,0"/>

                    <TextBlock Grid.Column="1">
                        <Run>
                            <Run.Text>
                                <MultiBinding Converter="{StaticResource tlkConverterDefault}">
                                    <Binding ElementName="ucSpellComboBox" Path="SelectedValue.Name"/>
                                </MultiBinding>
                            </Run.Text>
                        </Run>
                        <Run Text="{Binding ElementName=ucSpellComboBox, Path=SelectedValue.Hint, Converter={StaticResource hintConverter}}"/>
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>

        <Button x:Name="btGoto" Grid.Column="1" Content="👁" Click="btGoto_Click" Margin="1,0,0,0" 
                Height="{Binding ElementName=cbSpells, Path=ActualHeight}" Width="{Binding ElementName=cbSpells, Path=ActualHeight}"/>
        <Button x:Name="btClear" Grid.Column="2" Content="🗑" Click="btClear_Click" Margin="1,0,0,0"
                Height="{Binding ElementName=cbSpells, Path=ActualHeight}" Width="{Binding ElementName=cbSpells, Path=ActualHeight}" 
                Visibility="{Binding ElementName=ucSpellComboBox, Path=IsNullable, Converter={StaticResource bool2VisCollapsed}}"/>
    </Grid>
</UserControl>
