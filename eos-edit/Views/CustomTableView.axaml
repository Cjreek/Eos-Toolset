<local:LanguageAwarePage xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:Eos.Views"
             xmlns:vm="using:Eos.ViewModels"
             xmlns:uc="using:Eos.Usercontrols"
             xmlns:repo="using:Eos.Repositories"
             xmlns:types="using:Eos.Types"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Eos.Views.CustomTableView"
             x:Name="page">
  <Design.DataContext>
    <vm:CustomTableViewModel/>
  </Design.DataContext>

  <local:LanguageAwarePage.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Assets/ConverterResources.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </local:LanguageAwarePage.Resources>

  <local:LanguageAwarePage.Styles>
    <Styles>
      <StyleInclude Source="/Assets/StyleResources.axaml"/>
    </Styles>
  </local:LanguageAwarePage.Styles>

  <Border BorderBrush="Silver" BorderThickness="0,1,0,0">
    <Grid Margin="10" IsEnabled="{Binding !Data.IsReadonly}">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <TextBlock Text="Custom Table" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="22" Margin="0,0,0,10" FontWeight="Bold"/>

      <TextBlock Grid.Row="1" Grid.Column="0" Text="Display Name" Margin="0,0,5,0" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Data.Name}"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="Filename (.json)" Margin="0,0,5,0" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Data.FileName}" MaxLength="16"/>

      <TextBlock Grid.Row="3" Grid.Column="0" Text="Hint" Margin="0,0,5,0" HorizontalAlignment="Right"/>
      <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Data.Hint}"/>
      
      <DataGrid Grid.Row="4" Grid.Column="1" Items="{Binding Data.Items}" FontSize="14" CanUserSortColumns="False" IsReadOnly="True" VerticalAlignment="Stretch" Margin="2,0,0,0">
        <DataGrid.DataTemplates>
          <DataTemplate DataType="{x:Type types:DataTypeDefinition}">
            <TextBlock Text="{Binding Label}"/>
          </DataTemplate>
        </DataGrid.DataTemplates>

        <DataGrid.Columns>
          <DataGridTemplateColumn Header="Label" Width="200">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBox Text="{Binding Label}" VerticalContentAlignment="Center" Height="22" Margin="2,0,0,3"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <DataGridTemplateColumn Header="2DA Column" Width="200">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <TextBox Text="{Binding Column}" VerticalContentAlignment="Center" Height="22" Margin="2,0,0,3"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <DataGridTemplateColumn Header="DataType" Width="200">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <ComboBox Items="{Binding Source={x:Static repo:MasterRepository.DataTypes}}" SelectedItem="{Binding DataType}" DisplayMemberBinding="{Binding Label}" Margin="2,0,0,3" Padding="3,0,0,0"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <DataGridTemplateColumn Header="" Width="40">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Grid Margin="2,0,0,3">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>

                  <Button Grid.Column="0" Content="ðŸ¡…" FontSize="14" Foreground="#505050" Height="24" Margin="0,0,0,0" Command="{Binding ElementName=page, Path=DataContext.MoveObjectPropertyUpCommand}" CommandParameter="{Binding}"/>
                  <Button Grid.Column="1" Content="ðŸ¡‡" FontSize="14" Foreground="#505050" Height="24" Margin="1,0,0,0" Command="{Binding ElementName=page, Path=DataContext.MoveObjectPropertyDownCommand}" CommandParameter="{Binding}"/>
                </Grid>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>

          <DataGridTemplateColumn Header="" Width="30">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <uc:DeleteButton Command="{Binding ElementName=page, Path=DataContext.DeleteObjectPropertyCommand}" CommandParameter="{Binding}" Margin="2,0,0,3"/>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>

      <Button Grid.Row="5" Grid.Column="1" Content="Add Property" Width="150" Margin="2,5,0,0" HorizontalAlignment="Left" Command="{Binding AddObjectPropertyCommand}"/>
    </Grid>
  </Border>
</local:LanguageAwarePage>
